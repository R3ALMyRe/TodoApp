{% extends 'base.html.twig' %}

{% block title %}Supprimer Tâche{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Supprimer la tâche</h1>
        
        <div class="alert alert-warning" role="alert">
            Êtes-vous sûr de vouloir supprimer cette tâche ?
        </div>

        <p><strong>Titre :</strong> {{ task.title }}</p>
        <p><strong>Description :</strong> {{ task.description }}</p>
        <p><strong>Status :</strong> 
            {% if task.status %}
                <span class="badge bg-success">Terminée</span>
            {% else %}
                <span class="badge bg-warning text-dark">En cours</span>
            {% endif %}
        </p>

        <form method="post" action="{{ path('task_delete', {'id': task.id}) }}" class="d-inline" onsubmit="return confirm('Voulez-vous vraiment supprimer cette tâche ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
        <a href="{{ path('task_index') }}" class="btn btn-secondary">Annuler</a>
    </div>
{% endblock %}
