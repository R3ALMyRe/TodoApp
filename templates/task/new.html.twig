{% extends 'base.html.twig' %}

{% block title %}Nouvelle Tâche{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Créer une nouvelle tâche</h1>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.status, 'Terminée ?', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.status, {'attr': {'class': 'form-check-input'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.createdAt, 'Date de création', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.createdAt, {'attr': {'class': 'form-control', 'disabled': true}}) }}
            </div>

            <button type="submit" class="btn btn-success">Enregistrer</button>
            <a href="{{ path('task_index') }}" class="btn btn-secondary">Retour à la liste</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
